@require 'color.styl'

.sm-topbar
  background-color #2c3e50
  height  44px
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.2)
  color #F1F1F1
  position relative

  .title
    position absolute
    left 0
    top 0
    width 100%
    line-height 44px
    text-align center
    white-space nowrap
    word-wrap normal
    text-overflow ellipsis
    font-size 1.6rem
    color #F1F1F1
    margin 0;
    pointer-events none

  .sm-btn
    line-height 44px
    margin 0 8px
    padding 0;
    background-color transparent
    border none
    color #fff;

bg-mixins(".sm-topbar")
   

.sm-nav, .sm-menu
  position relative
  margin 0 auto
  display flex
  align-items center
  height 40px
  line-height 38px
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  background-color #fff

  a
    color #333

  & > * 
    flex 1
    text-align center
    position relative
    display block
    &::after
      content " "
      display block
      height 20px
      border-right 1px solid CDEFAULT
      position absolute
      right 0
      top 50%
      margin-top -10px

    &:last-child::after
      display none

  .active
    border-bottom 2px solid CPRIMARY
    
nav-mixins(".sm-nav")

.sm-menu
  box-shadow none 


.sm-segmented
  position relative
  margin 0 auto
  display flex
  align-items center
  height 44px
  line-height 34px
  padding 5px
  .active
    background-color #7f8c9a  

.sm-segmented > * 
  flex 1
  text-align center
  background-color #bdc3c7
  color #fff
  display block
  // border-right 1px solid  #e4e7ea

segmented-mixins(".sm-segmented")

.sm-segmented > *:first-child
  border-top-left-radius 3px
  border-bottom-left-radius: 3px
.sm-segmented > *:last-child
  border-top-right-radius 3px;
  border-bottom-right-radius 3px
  border-right none

.sm-loading
  width 26px
  height 26px
  display inline-block
  // background url(loading.gif)
  border 2px solid CDEFAULT
  border-left-color transparent!important
  border-bottom-color transparent!important

  border-radius 100%
  animation: rotation 1s infinite linear;
  &.small
    width  13px
    height 13px
    background-size 13px auto

border-mixins(".sm-loading")

@keyframes rotation
   from {transform: rotate(0deg);}
   to {transform: rotate(359deg);}

.sm-loading-bar
  overflow-x hidden
  position absolute
  top 0
  left 0
  width 100%
  min-height 46px
  color #fff
  pointer-events none

  .tip
    position absolute
    width 100%
    text-align center
    margin 0 auto
    line-height 40px
    height 44px
    top -50%
    left 50%
    margin-left -50%
    background-color transparent
    transition all 300ms;
    margin-top -22px
    .point
      width 30%
      height 4px
      background-color CBLUE
      margin 0 auto 0 auto


    
  .line
    
    position absolute
    bottom 0
    width 200%
    left -100%
    justify-content space-between
    animation: linemove 2s infinite linear
    display none
    & > i
      display block;
      width 16%
      height 3px
    & > i:nth-child(1)
      background CRED
    & > i:nth-child(2)
      background CPRIMARY
    & > i:nth-child(3)
      background CYELLOW
    & > i:nth-child(4)
      background CRED
    & > i:nth-child(5)
      background CPRIMARY
    & > i:nth-child(6)
      background CYELLOW

  &.waiting .line
    display flex
  &.waiting .mark
    display none;
  &.waiting .tip
    transition-delay 1000ms
  &.pulldown .tip
    background-color rgba(0, 0, 0, 0.5)
    top 50%


    

@keyframes linemove
  0%
    left -100%
  50%
    left -50%
  99.9%
    left 0
  100%
    left -100%




