@require 'color.styl'

.sm-topbar
  background-color #2B9
  height  44px
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.2)
  color #F1F1F1

  .title
    position absolute
    left 0
    top 0
    width 100%
    line-height 44px
    text-align center
    white-space nowrap
    word-wrap normal
    text-overflow ellipsis
    font-size 16px
    color #F1F1F1
    margin 0;

  & > *
    margin: 0px 8px;
    height 44px
    display inline-block
    line-height 44px

bg-mixins(".sm-topbar")
   

.sm-nav
  position relative
  margin 0 auto
  display flex
  align-items center
  height 40px
  line-height 38px
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  a
    color #333

  & > * 
    flex 1
    text-align center
    position relative
    display block
    &::after
      content " "
      display block
      height 20px
      border-right 1px solid CDEFAULT
      position absolute
      right 0
      top 50%
      margin-top -10px

    &:last-child::after
      display none

  .active
    border-bottom 2px solid CPRIMARY
    
nav-mixins(".sm-nav")
    


.sm-segmented
  position relative
  margin 0 auto
  display flex
  align-items center
  height 44px
  line-height 34px
  padding 5px
  .active
    background-color #16a085  

.sm-segmented > * 
  flex 1
  text-align center
  background-color CPRIMARY
  color #fff
  display block
  // border-right 1px solid  #e4e7ea

segmented-mixins(".sm-segmented")

.sm-segmented > *:first-child
  border-top-left-radius 3px
  border-bottom-left-radius: 3px
.sm-segmented > *:last-child
  border-top-right-radius 3px;
  border-bottom-right-radius 3px
  border-right none

.sm-loading
  width 26px
  height 26px
  display inline-block
  // background url(loading.gif)
  border 2px solid CDEFAULT
  border-left-color transparent!important
  border-bottom-color transparent!important

  border-radius 100%
  animation: rotation 1s infinite linear;
  &.small
    width  13px
    height 13px
    background-size 13px auto

border-mixins(".sm-loading")

@keyframes rotation
   from {transform: rotate(0deg);}
   to {transform: rotate(359deg);}

.sm-badge
  display inline-block
  padding 2px 9px 3px
  font-size 12px
  line-height 1
  color #FFF
  background-color CPRIMARY
  border-radius 100px

bg-mixins(".sm-badge")



