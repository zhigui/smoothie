.sm-list
  list-style none
  padding 0
  .label, .divider
    background-color #F5F5F5
    padding 5px 10px
    color #222
    font-size 1.2rem
    font-weight bold

  .chevrons
    padding-right 25px

  .chevrons::after
    position absolute
    content ''
    border-top solid 2px #969696
    border-right solid 2px #969696
    right: 10px
    top: 50%
    width 8px
    height 8px
    margin-top -4px
    transform rotate(45deg)

  li, .item
    display block
    position relative
    border-top: 1px solid #ddd
    border-bottom: 1px solid #ddd
    padding 15px 15px 15px 15px
    color #444
    background-color #fff
    margin -1px 0 -1px 0
    &.item-img-left
      // padding-left 100px
      min-height 100px
      img
        display block
        float left
        width 80px
        height 80px
        margin -5px 0 -5px -5px
      h2
        font-size 1.6rem
        padding-left 80px
        margin-bottom 4px
      p
        padding-left 80px;
        font-size 1.4rem
        margin-bottom 0
    &.item-avatar
      padding-left 60px
      min-height 70px
      & > img
        display block
        position absolute
        left 10px
        top 10px
        width 40px
        height 40px
        // margin -5px 0 -5px -5px
      h2
        font-size 1.4rem
        margin-bottom 4px
      p
        font-size 1.2rem
        margin-bottom 0

  li:last-child, .sm-item:last-child
    // border-bottom none
  


      

