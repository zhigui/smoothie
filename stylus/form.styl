.sm-select
  position relative
  &::after
    content " "
    position absolute
    right 10px 
    top 50%
    width 0
    height 0
    border-top 10px solid  border-color
    border-left 10px solid transparent
    border-right 10px solid transparent
    margin-top  -5px
  & select, & .select
    @extend .sm-input input
    padding-right 35px
    direction rtl
.sm-check, .sm-radio
  display block
  position relative
  padding-left 50px!important
  input
    position absolute
    appearance none
    background-color transparent
    outline none
    border none
    width 30px
    height 28px
    margin 0
    left 10px
    top 50%
    margin-top -14px
    &::before
      content " "
      display block
      width 26px
      height 26px
      border 1px solid CPRIMARY
      position absolute
      left 0
      top 50%
      margin-top -14px
      border-radius 100%
      transition: background-color 200ms ease-in-out;
    &[type="checkbox"]::after
      content " "
      height 14px
      width 7px
      border-right  2px solid #FFF
      border-bottom  2px solid  #FFF
      display none
      position absolute
      left 10px
      top 50%
      margin-top -10px
      transform rotate(45deg)
      pointer-events none
    &[type="checkbox"]:checked::before
      background-color CPRIMARY
    

    &[type="radio"]::after
      content " "
      display block
      position absolute
      width 16px
      height 16px
      border-radius 100%
      background-color #FFF
      left 50%
      top 50%
      margin-top -8px
      margin-left -9px
      opacity 0
      // transition: opacity 200ms ease-in-out;
    
    &[type="radio"]:checked::before
      background-color CPRIMARY
      
    &[type="radio"]:checked::after
      opacity 1
    &:checked::after
      display block


choosebox-mixins(".sm-check")

choosebox-mixins(".sm-radio")

.sm-toggle
  display block
  position relative
  padding-left 5px
  padding-right 65px!important
  input
    appearance none
    background-color transparent
    outline none
    padding 0
    margin 0
    border none
    width 50px
    height 28px
    position absolute
    right 15px;
    top 50%
    margin-top -14px
  input::before
    content " "
    display block
    width 50px
    height 28px
    border-radius 14px
    background-color CDEFAULT
    transition background-color 0.2s ease-in-out;

  input::after
    content " "
    display block
    position absolute
    left 2px
    top 2px
    width 24px
    height 24px
    border-radius 100%
    background-color #fff
    transition: left 0.2s ease-in-out;
  input:checked::before
    background-color CPRIMARY
  input:checked::after
    left 24px

choosebox-mixins(".sm-toggle")

