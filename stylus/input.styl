@require 'color.styl'

border-color = #e1e1e1
.sm-input, .sm-select
  @extend .sm-flex
  border 1px solid border-color
  align-items center
  margin -1px
  .input-label
    display block
    padding 0 0  0 10px;
    width 100px

.sm-input   
  input
    flex 1
    appearance none
    border-radius 0
    display block
    padding 10px 12px
    margin 0
    background-color #fff
    border none
    outline none
    height 40px
    font-size 16px
    line-height 18px
    // margin 10px 0
     


    &[type="text"]
      // &:focus
      //   box-shadow inset 0 0 3px CPRIMARY
    &[readonly]
      background-color #eee

    textarea&
      border 1px solid border-color
      min-height 90px

  &.success
    border-left 2px solid CSUCCESS
  &.error
    border-left 2px solid CDANGER
  &.warning
    border-left 2px solid CWARNING

  &.space
    margin 10px 0
  &.small
    height 34px
    font-size 12px
  &.large
    font-size 18px
    height 46px


  
  &[disabled]
    opacity 0.5
    pointer-events none
    background-color #eee;
fieldset[disabled] .sm-input
    opacity 0.5
    pointer-events none
    background-color #eee;

