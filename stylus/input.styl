.sm-select
  position relative
  &::after
    content " "
    position absolute
    right 10px 
    top 50%
    width 0
    height 0
    border-top 10px solid  border-color
    border-left 10px solid transparent
    border-right 10px solid transparent
    margin-top  -5px
  & select, & .select
    @extend .sm-input input
    padding-right 35px
.sm-check1, sm-radio1
  display block
  line-height 28px
  padding 10px 0
  input
    position relative
    appearance none
    background-color transparent
    outline none
    width 30px
    &::before
      content " "
      display block
      width 26px
      height 26px
      border 1px solid CPRIMARY
      position absolute
      left 0
      top 50%
      margin-top -14px
      border-radius 100%
      transition: background-color 200ms ease-in-out;
    &[type="checkbox"]::after
      content " "
      height 14px
      width 7px
      border-right  2px solid #FFF
      border-bottom  2px solid  #FFF
      display none
      position absolute
      left 10px
      top 50%
      margin-top -10px
      transform rotate(45deg)
      pointer-events none
    &[type="checkbox"]:checked::before{
      background-color CPRIMARY
    }

    &[type="radio"]::after{
      content " "
      display block
      position absolute
      width 16px
      height 16px
      border-radius 100%
      background-color CPRIMARY
      left 50%
      top 50%
      margin-top -8px
      margin-left -9px
      transform scale(0)
      transition: transform 200ms ease-in-out;
    }
    &[type="radio"]:checked::after{
      transform scale(1)
    }

    &:checked::after
      display block

.sm-check
  position relative
  height 20px
  display block
  margin-top 8px

  &::before
    content " "
    display block
    width 16px
    height 16px
    border 2px solid CPRIMARY
    position absolute
    left 0
    top 50%
    margin-top -9px
    border-radius 4px
    pointer-events none
  label
    line-height 20px
    white-space nowrap
    word-wrap normal
    overflow hidden
    text-overflow ellipsis
    display inline-block
    padding-left 25px
  input[type="checkbox"]
    display none

  label::after
    content " "
    height 10px
    width 5px
    border-right  2px solid CPRIMARY
    border-bottom  2px solid CPRIMARY
    display none
    position absolute
    left 6px
    top 50%
    margin-top -6px
    transform rotate(45deg)
    pointer-events none


  input[type="checkbox"]:checked + label::after
    display: block
checkbox-mixins(".sm-check")
