@require 'color.styl'

border-color = #e1e1e1
.sm-input
  appearance none
  border-radius 0
  display block
  padding 10px 12px
  width 100%
  background-color #fff
  border none
  outline none
  height 40px
  font-size 16px
  line-height 18px
  // margin 10px 0
  border-radius 2px
  &.space
    margin 10px 0
  &.small
    height 34px
    font-size 12px
  &.large
    font-size 18px
    height 46px

  &[type="text"]
    border 1px solid border-color
    &:focus
      border-color CPRIMARY
      box-shadow 0 0 3px CPRIMARY
  &[readonly]
    background-color #eee

  textarea&
    border 1px solid border-color
    min-height 90px

  &.success
    border-color CSUCCESS
  &.error
    border-color CDANGER
  &.warning
    border-color CWARNING
  
  &[disabled]
    opacity 0.5
    pointer-events none
    background-color #eee;
fieldset[disabled] .sm-input
    opacity 0.5
    pointer-events none
    background-color #eee;

