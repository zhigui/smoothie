.sm-toggle1
  position relative
  input
    appearance none
    background-color transparent
    position relative
    outline none
  input::before
    content " "
    display block
    width 50px
    height 28px
    border-radius 14px
    background-color CDEFAULT
    transition background-color 0.2s ease-in-out;

  input::after
    content " "
    display block
    position absolute
    left 2px
    top 2px
    width 24px
    height 24px
    border-radius 100%
    background-color #fff
    transition: left 0.2s ease-in-out;
  input:checked::before
    background-color CPRIMARY
  input:checked::after
    left 24px




