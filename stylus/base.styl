/** 
 * Set default font familly
 * prevent ios text size adjuat
 * prevent ios, android long press callout menu or select text
 * stylus -o ../css  -w
 */
*
  box-sizing  border-box

body
  font-family "Helvetica Neue", Helvetica, STHeiTi, sans-serif
  margin 0
  background #E8EAEf
  color #333
  font-size 14px


html, body
  -webkit-user-select none
  user-select none

a, img
  -webkit-touch-callout none

img
  max-width 100%

ul
  margin 0

a
  text-decoration: none

h1, h2, h3, h4, h5, h6 
  margin-top 0
  margin-bottom 10px
  line-height 1
  font-weight 400


h1, .h1 
  font-size: 30px;


h2, .h2 
  font-size 24px


h3, .h3 
  font-size 18px


h4, .h4 
  font-size: 16px


h5, .h5 
  margin-top: 20px
  font-size: 14px


h6, .h6 
  margin-top:20px
  font-size 12px

p
  margin-top 0
  margin-bottom 10px
  font-size 12px
  line-height 1.4
  color #777



