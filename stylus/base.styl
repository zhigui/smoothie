/** 
 * Set default font familly
 * prevent ios text size adjuat
 * prevent ios, android long press callout menu or select text
 * stylus -o ../css  -w
 */

html
  font-size 62.5%

*
  box-sizing  border-box

body

  // font-family "Helvetica Neue", Helvetica, STHeiTi, sans-serif
  font-family: "Helvetica Neue",Helvetica,sans-serif;
  margin 0
  background #E8EAEf
  color #333
  font-size 1.4rem


html, body
  -webkit-user-select none
  user-select none

a, img
  -webkit-touch-callout none

img
  max-width 100%

ul
  margin 0

a
  text-decoration: none
  outline: none;
  -webkit-tap-highlight-color rgba(0, 0, 0, 0.1)
  -webkit-focus-ring-color rgba(0, 0, 0, 0)
  color #333

h1, h2, h3, h4, h5, h6 
  margin-top 0
  margin-bottom 10px
  line-height 1
  font-weight 400


h1, .h1 
  font-size: 3rem


h2, .h2 
  font-size 2.4rem


h3, .h3 
  font-size 1.8rem


h4, .h4 
  font-size: 1.6rem


h5, .h5 
  margin-top: 2rem
  font-size: 1.4rem


h6, .h6 
  margin-top:2rem
  font-size 12px

p
  margin-top 0
  margin-bottom 10px
  font-size 1.4rem
  line-height 1.4
  color #777



