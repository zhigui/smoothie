@require 'color.styl'

.sm-btn
  display inline-block
  vertical-align: baseline;
  text-align center
  text-align center
  text-overflow ellipsis
  white-space nowrap
  background-color #fff
  color #666
  text-decoration none
  outline none
  appearance none
  border 1px solid #CFCFCF
  font-size 100%
  line-height normal
  border-radius 2px
  padding 10px 20px
  &.space 
    margin-top 8px
  &.small
    font-size 14px
    padding 4px 10px
  &.middle
    font-size 14px
    padding 6px 12px
  &.large
    font-size 18px
    padding 10px 15px
  &.blank
    background-color #fff
    border 1px solid CGRAY
    color #666
  &.block
    display block
  &.primary
    border none
    color #fff
    background-color CPRIMARY
  &.success
    border none
    color #fff
    background-color CSUCCESS
  &.info
    border none
    color #fff
    background-color CINFO
  &.danger
    border none
    color #fff
    background-color CDANGER
  &.warning
    border none
    color #fff
    background-color CWARNING
  &[disabled]
    opacity 0.5
    pointer-events none

bg-mixins(".sm-btn")